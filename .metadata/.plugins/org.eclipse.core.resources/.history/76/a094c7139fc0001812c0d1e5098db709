package chapter1;

import java.util.Scanner;
public class Hello {
	public static void main(String[]args)
	{
		Scanner scanner =new Scanner(System.in);
		String coffee;
		int n;
		System.out.println("커피 주문하세요>>");
		coffee=scanner.toString();
		n= scanner.nextInt();
		
		if(coffee.equals("에스프레소"))
			System.out.printf("%d원입니다.",n*2000);break;
			else if(coffee.equals("아메리카노"))
			System.out.printf("%d원입니다.",n*2500);break;
			else if(coffee.equals("카푸치노"))
			System.out.printf("%d원입니다.",n*3000);break;
			else if(coffee.equals("카페라떼"))
			System.out.printf("%d원입니다.",n*3500);
	}
}