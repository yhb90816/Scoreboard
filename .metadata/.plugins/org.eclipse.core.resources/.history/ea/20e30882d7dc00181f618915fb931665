package chapter1;

import java.util.*;

public class Work {
	public static void main(String args[]) {
		Scanner scanner = new Scanner(System.in);
		String pp[]= {"가위","바위","보"};
		while(true) {
			System.out.println("가위(1), 바위(2), 보(3), 끝내기(4)>>");
			int n = scanner.nextInt()-1;
			if(n==3) {
				System.out.println("게임을 종료합니다...");
				System.exit(0);
			}
			
		}
		
		
	}

}
